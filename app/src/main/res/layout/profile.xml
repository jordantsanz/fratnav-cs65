<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@string/backgroundColor"
    tools:context=".Profile">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/profile_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintTop_toBottomOf="parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profileUsername"
        android:textColor="@string/textColor"
        android:text="@string/username"
        android:fontFamily="@font/montserrat_bold"
        android:textStyle="italic"
        android:layout_gravity="left"
        android:layout_marginLeft="55dp"
        android:textSize="30sp"
        android:layout_marginTop="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@string/textColor"
        android:fontFamily="@font/montserrat"
        android:text="@string/affiliated"
        android:textSize="16sp"
        android:layout_marginTop="95dp"
        android:layout_marginStart="55dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@string/textColor"
        android:fontFamily="@font/montserrat"
        android:text="@string/year"
        android:textSize="16sp"
        android:layout_marginTop="120dp"
        android:layout_marginStart="55dp"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="190dp"
            android:layout_marginTop="120dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/sexuality"
            android:textColor="@string/textColor"
            android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@string/textColor"
        android:fontFamily="@font/montserrat"
        android:text="@string/gender"
        android:textSize="16sp"
        android:layout_marginTop="95dp"
        android:layout_marginStart="190dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@string/textColor"
        android:fontFamily="@font/montserrat"
        android:textSize="20sp"
        android:text="@string/subscribed"
        android:layout_marginTop="190dp"
        android:layout_marginStart="55dp"/>

        <GridLayout
            android:id="@+id/profilegrid"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="225dp"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="45dp"
            android:layout_weight="1"
            android:alignmentMode="alignMargins"
            android:columnCount="1"
            android:rowCount="1"
            android:columnOrderPreserved="false"
            android:padding="5dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#2D2F35"
                app:cardCornerRadius="4dp"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="6dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/house_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="APhi"
                        android:textAlignment="center"
                        android:textColor="@string/textColor"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </GridLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@string/textColor"
        android:fontFamily="@font/montserrat"
        android:text="@string/notification"
        android:textSize="20sp"
        android:layout_marginTop="300dp"
        android:layout_marginStart="55dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginTop="390dp"
        android:textColor="@string/textColor"
        android:fontFamily="@font/montserrat"
        android:text="@string/past_posts"
        android:textSize="20sp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="66dp"
        android:orientation="horizontal"
        android:layout_marginTop="335dp"
        android:layout_marginStart="55dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@string/textColor"
            android:fontFamily="@font/montserrat"
            android:text="@string/on"
            android:textSize="16sp"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@string/textColor"
            android:fontFamily="@font/montserrat"
            android:textSize="16sp"
            android:text="@string/off"
            android:layout_marginStart="25dp"/>
    </LinearLayout>



    <ListView
        android:id="@+id/profileListView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="430dp"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="30dp"
        android:background="@drawable/background"
        app:elevation="2dp"
        app:menu="@menu/navbar"
        app:labelVisibilityMode="unlabeled"
        app:itemIconSize="30dp"
        app:itemRippleColor="@android:color/transparent"
        app:itemIconTint="@drawable/item_selector"
        android:id="@+id/bottomBar"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@string/backgroundColor"
    tools:context=".Authentication">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@string/textColor"
        android:layout_marginTop="50dp"
        android:textSize="60dp"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/logInInfo"
        android:textColor="@string/textColor"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:textSize="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@string/textColor"
        android:text="@string/email"
        android:layout_marginLeft="25dp"
        />

    <EditText
        android:id="@+id/createEmail"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/background" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@string/textColor"
        android:text="Confirm Email:"
        android:layout_marginLeft="25dp"
        />
    <EditText
        android:layout_marginTop="15dp"
        android:background="@drawable/background"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:id="@+id/createEmailConfirm"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@string/textColor"
        android:layout_marginTop="20dp"
        android:text="Password"
        android:layout_marginStart="25dp" />
    <EditText
        android:layout_marginTop="15dp"
        android:background="@drawable/background"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:id="@+id/createPassword"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@string/textColor"
        android:layout_marginTop="20dp"
        android:text="Confirm Password"
        android:layout_marginStart="25dp"
        />
    <EditText
        android:layout_marginTop="15dp"
        android:background="@drawable/background"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:id="@+id/createPasswordConfirm"
        android:layout_gravity="center"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:onClick="createAccount"

        android:text="Next"/>


</LinearLayout>
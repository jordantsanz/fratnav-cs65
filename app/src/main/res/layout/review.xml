<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/createPostRelativeLayout"
    android:background="@color/grey">

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:fontFamily="@font/cabin"
        android:layout_height="wrap_content"
        android:background="@drawable/purple_background"
        android:layout_marginStart="295dp"
        android:textColor="@color/textColor"
        android:onClick="savePost"
        android:textSize="18sp"
        android:text="@string/post"
        android:layout_marginTop="20dp"
        android:id="@+id/postSave"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/postCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/teal_background"
        android:fontFamily="@font/cabin"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="@string/action_cancel"
        android:textColor="@color/textColor"
        android:textSize="18sp"
        android:onClick="cancelPost"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="120dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saftey:"
            android:textSize="18sp"
            android:fontFamily="@font/montserrat"/>

        <androidx.appcompat.widget.AppCompatRatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="43dp"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="180dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inclusivity:"
            android:textSize="18sp"
            android:fontFamily="@font/montserrat"/>

        <androidx.appcompat.widget.AppCompatRatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="240dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Basement:"
            android:textSize="18sp"
            android:fontFamily="@font/montserrat"/>

        <androidx.appcompat.widget.AppCompatRatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="300dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Overall:"
            android:textSize="18sp"
            android:fontFamily="@font/montserrat"/>

        <androidx.appcompat.widget.AppCompatRatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="42dp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comments"
        android:layout_marginTop="360dp"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/montserrat"/>
    />
    <EditText
        android:id="@+id/postUserText"
        android:layout_width="360dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:paddingStart="15dp"
        android:inputType="text"
        android:paddingEnd="15dp"
        android:hint="@string/postHint"
        android:textColorHint="@color/textColor"
        android:background="@drawable/post_background"
        android:layout_marginTop="390dp"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/textColor"/>



</androidx.coordinatorlayout.widget.CoordinatorLayout>
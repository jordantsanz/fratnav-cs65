        <activity android:name=".updateProfile" />
        <activity android:name=".CreateAccountActivity" />
        <activity android:name=".CreateProfile" />
        <activity android:name=".databaseHelpers.RealtimeFirebaseDB" />
        <activity android:name=".Authentication" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.FratNav.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Forum" />
        <activity android:name=".HousesSearch" />
        <activity android:name=".Profile" />
        <activity android:name=".HousePage" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>